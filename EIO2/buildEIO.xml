<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="dist" name="EIO2">
    <property environment="env"/>
    <property name="NorfolkMetalMatisse.location" value="../NorfolkMetalMatisse"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="EIO2.classpath">
        <pathelement location="bin"/>
        <pathelement location="libraries/EL-Config.jar"/>
        <pathelement location="libraries/jamod.jar"/>
        <pathelement location="libraries/log4j-1.2.15.jar"/>
    </path>
    <path id="run.IOFrameTest.classpath">
        <path refid="EIO2.classpath"/>
        <pathelement location="depends"/>
    </path>
    <path id="run.EIOManager.classpath">
        <pathelement location="depends"/>
        <path refid="EIO2.classpath"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
                <target name="dist" depends="build-eclipse-compiler" description="Jar it all up">
                    <echo>Jarring it all up.</echo>
                    <jar destfile="dist/EIO2.jar" basedir="bin">
                        <manifest>
                            <attribute name="Built-By" value="${user.name}"/>
                            <attribute name="Implementation-Vendor" value="Electroland"/>
                            <attribute name="Implementation-Title" value="EIO"/>
                            <attribute name="Implementation-Version" value="2.0"/>
                            <attribute name="includeantruntime" value="false"/>
                        </manifest>  
                    </jar>
                     <echo>and done.</echo>
                </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="EIO2.classpath"/>
        </javac>
    </target>
    <target description="copy Eclipse compiler jars to ant lib directory" name="init-eclipse-compiler">
        <copy todir="${ant.library.dir}">
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </copy>
        <unzip dest="${ant.library.dir}">
            <patternset includes="jdtCompilerAdapter.jar"/>
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </unzip>
    </target>
    <target description="compile project with Eclipse compiler" name="build-eclipse-compiler">
        <property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
        <antcall target="build"/>
    </target>
    <target name="IOFrameTest">
        <java classname="net.electroland.eio.IOFrameTest" failonerror="true" fork="yes">
            <classpath refid="run.IOFrameTest.classpath"/>
        </java>
    </target>
    <target name="EIOManager">
        <java classname="net.electroland.eio.EIOManager" failonerror="true" fork="yes">
            <classpath refid="run.EIOManager.classpath"/>
        </java>
    </target>
</project>
