<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="dist" name="Edmonton">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="Edmonton.classpath">
        <pathelement location="bin"/>
        <pathelement location="libraries/vecmath.jar"/>
        <pathelement location="libraries/log4j-1.2.15.jar"/>
        <pathelement location="libraries/miglayout-4.0.jar"/>
        <pathelement location="libraries/EL-Config.jar"/>
        <pathelement location="libraries/SCSoundControl.jar"/>
        <pathelement location="libraries/EIO.jar"/>
        <pathelement location="libraries/EA2.jar"/>
        <pathelement location="libraries/ELU2.jar"/>
        <pathelement location="libraries/j3dcore.jar"/>
        <pathelement location="libraries/j3dutils.jar"/>
        <pathelement location="libraries/jamod.jar"/>
        <pathelement location="libraries/core.jar"/>
        <pathelement location="libraries/EIU.jar"/>
        <pathelement location="libraries/javaosc_ELmod.jar"/>
    </path>
    <path id="run.EIAMainConductor.classpath">
        <pathelement location="depends/soundfiles"/>
        <pathelement location="depends/sprites"/>
        <path refid="Edmonton.classpath"/>
        <pathelement location="depends"/>
        <pathelement location="RecordedEIO"/>
    </path>
    <path id="run.SimpleSequence.classpath">
        <pathelement location="depends"/>
        <path refid="Edmonton.classpath"/>
    </path>
    <path id="run.SimpleSequencer.classpath">
        <pathelement location="depends"/>
        <path refid="Edmonton.classpath"/>
    </path>
    <path id="run.TestConductor.classpath">
        <pathelement location="depends"/>
        <path refid="Edmonton.classpath"/>
        <pathelement location="RecordedEIO"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="Edmonton.classpath"/>
        </javac>
    </target>
    <target name="dist" depends="build-eclipse-compiler" description="Jar it all up">
        <echo>Jarring it all up.</echo>
        <jar destfile="dist/Edmonton.jar" basedir="bin">
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Implementation-Vendor" value="Electroland"/>
                <attribute name="Implementation-Title" value="Edmonton"/>
                <attribute name="Implementation-Version" value="1.0"/>
                <attribute name="includeantruntime" value="false"/>
            </manifest>  
        </jar>
         <echo>and done.</echo>
    </target>
    <target description="copy Eclipse compiler jars to ant lib directory" name="init-eclipse-compiler">
        <copy todir="${ant.library.dir}">
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </copy>
        <unzip dest="${ant.library.dir}">
            <patternset includes="jdtCompilerAdapter.jar"/>
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </unzip>
    </target>
    <target description="compile project with Eclipse compiler" name="build-eclipse-compiler">
        <property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
        <antcall target="build"/>
    </target>
    <target name="EIAMainConductor">
        <java classname="net.electroland.edmonton.core.EIAMainConductor" failonerror="true" fork="yes">
            <classpath refid="run.EIAMainConductor.classpath"/>
        </java>
    </target>
    <target name="SimpleSequence">
        <java classname="net.electroland.edmonton.core.sequencing.SimpleSequence" failonerror="true" fork="yes">
            <classpath refid="run.SimpleSequence.classpath"/>
        </java>
    </target>
    <target name="SimpleSequencer">
        <java classname="net.electroland.edmonton.core.sequencing.SimpleSequencer" failonerror="true" fork="yes">
            <classpath refid="run.SimpleSequencer.classpath"/>
        </java>
    </target>
    <target name="TestConductor">
        <java classname="net.electroland.edmonton.test.TestConductor" failonerror="true" fork="yes">
            <classpath refid="run.TestConductor.classpath"/>
        </java>
    </target>
</project>
