package net.electroland.utils {		import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;	import flash.text.TextFieldType;	import flash.text.AntiAliasType;			public class TextFieldFactory {				//public var tfFormat:TextFormat;		//public var tf:TextField;				public static function getTF(tfText:String, fontName:String, tfSize:Number, 				  tfColor:Number = 0x000000, tfWrap:Boolean = false, tfWidth:Number = 0, tfEmbed:Boolean = true, tfLtrSpacing:Number = 0.0, isBold:Boolean = false, // optional params				  tfAlign:String = "left", tfSelect:Boolean = false):TextField { // optional params						var tfFormat:TextFormat = new TextFormat();          	tfFormat.font = fontName;			tfFormat.bold = isBold;          	tfFormat.color = tfColor;          	tfFormat.size = tfSize;			tfFormat.kerning = true;			tfFormat.letterSpacing = tfLtrSpacing;						var tf:TextField =new TextField;			tf.defaultTextFormat = tfFormat;			if (tfWidth > 0) {				tf.width=tfWidth;			}			tf.autoSize=tfAlign;			tf.selectable=tfSelect;			tf.embedFonts=tfEmbed;			tf.antiAliasType=AntiAliasType.ADVANCED;			tf.type=TextFieldType.DYNAMIC;			tf.wordWrap=tfWrap;			// return it at 0,0 for now			//tf.x=0;			//tf.y=0;			tf.text=tfText;						return tf;		}	}													}