package net.electroland.utils{	import flash.utils.Timer;	import flash.events.TimerEvent;	public class HeartBeatTimer {		private var ref:String;		private var t:Timer;		private var count:Number;		public function HeartBeatTimer(ref:String,interval:Number) {			this.ref = ref;			t = new Timer(interval,0);			t.addEventListener("timer",timedMessage,false,0,true);			t.start();			count = 0;		}		private function timedMessage(evt:TimerEvent) {			trace("HEARTBEAT: " + ref + " @ " + count++);		}	}}