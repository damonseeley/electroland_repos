				<ItemEvent Language="all" Gender="all" Age="all" Action="cutin" Time="00:00:00:000" Duration="0"/>
				<ItemEntry Language="all" Gender="all" Age="all" Action="unit" Link="First Unit" Volume="100" Loop="true">CRC/MEDIA/IMAGES/bluewave.png</ItemEntry>
				<!-- ><ItemEntry Language="all" Gender="all" Age="all" Action="unit" Link="First Unit" Volume="100" Loop="true">MEDIA/IMAGES/crc_bg_main_red_vs01.png</ItemEntry> -->
			</Item>
			

			
