				<ItemEntry Language="all" Gender="all" Age="all" Action="volumeUp" Link="default">Volume Up</ItemEntry>
			</Item>
			
			<Item ID="VolumeDownButton" Name="VolumeDownButton" Type="Button" ButtonType="NavButton" SingleUse="false" Description="Turn volume down." HorizontalAlign="left" VerticalAlign="top" x="300" y="40%" width="100" height="100">
