			</Item>
			
			<Item ID="QuitButton" Name="QuitButton" Type="Button" ButtonType="NavButton" SingleUse="false" Description="Quit the application." HorizontalAlign="center" VerticalAlign="middle" x="1053" y="700" width="100" height="100">
				<ItemEvent Language="all" Gender="all" Age="all" Action="cutin" Time="00:00:00:000" Duration="0"/>
				<ItemEntry Language="all" Gender="all" Age="all" Action="quit" Link="default">Quit Kiosk App</ItemEntry>
			</Item>
			
		
		</Items>
	</AdminUnit>
	
</Config>